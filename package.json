{
  "name": "shopify-quick-theme",
  "version": "1.0.3",
  "description": "Starter kit for Shopify theme developers.",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all -p theme:serve webpack:watch",
    "build": "npm-run-all webpack:prd",
    "build:dev": "npm-run-all webpack:dev",
    "deploy": "npm-run-all webpack:prd push",
    "deploy:dev": "npm-run-all webpack:dev push:dev",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet",
    "clean": "rimraf ./shopify",
    "clean:unused": "rimraf ./shopify/.gitignore",
    "lint": "npm-run-all -p eslint checkTypes stylelint theme:check",
    "lint:fix": "npm-run-all eslint:fix stylelint:fix format",
    "format": "prettier --write 'src/**/*.{js,ts}' --config .config/.prettierrc",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --config .config/.stylelintrc.json",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix --config .config/.stylelintrc.json",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --config .config/.eslintrc.json",
    "eslint:fix": "eslint --fix 'src/**/*.{js,ts}' --config .config/.eslintrc.json",
    "checkTypes": "tsc --noEmit --skipLibCheck",
    "checkLicense": "license-checker --production",
    "test": "npm-run-all -p unit e2e",
    "unit": "jest --config .config/jest.config.ts",
    "unit:watch": "jest --watch --config .config/jest.config.ts",
    "e2e": "playwright test --config .config/playwright.config.ts",
    "e2e:headed": "playwright test --headed --config .config/playwright.config.ts",
    "e2e:install": "playwright install",
    "e2e:codegen": "playwright codegen --config .config/playwright.config.ts",
    "postInstall": "typesync",
    "webpack:watch": "cross-env NODE_ENV=development webpack --config .config/webpack.config.js --watch",
    "webpack:dev": "cross-env NODE_ENV=development webpack --config .config/webpack.config.js",
    "webpack:prd": "cross-env NODE_ENV=production webpack --config .config/webpack.config.js",
    "newTheme": "npm-run-all theme:init clean:unused",
    "pull": "shopify theme pull -n --path=shopify",
    "pull:new": "mkdir shopify && shopify theme pull --path=shopify",
    "pull:dev": "shopify theme pull -d --path=shopify",
    "push": "shopify theme push -n --path=shopify",
    "push:dev": "shopify theme push -d --path=shopify",
    "push:upload": "shopify theme push -u --path=shopify",
    "share": "shopify theme share --path=shopify",
    "package": "npm-run-all theme:package",
    "preview": "shopify theme open",
    "theme:init": "shopify theme init shopify",
    "theme:serve": "shopify theme dev --path=shopify",
    "theme:list": "shopify theme list",
    "theme:package": "shopify theme package --path=shopify",
    "theme:check": "shopify theme check --path=shopify"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.3",
    "@types/license-checker": "^25.0.3",
    "@types/micromodal": "^0.3.3",
    "@types/opener": "^1.4.0",
    "@types/prettier": "^3.0.0",
    "@types/rimraf": "^4.0.5",
    "@types/sass-loader": "^8.0.5",
    "@types/smooth-scroll": "^16.1.1",
    "@types/svg-sprite-loader": "^3.9.5",
    "@types/write-file-webpack-plugin": "^4.5.2",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^10.4.14",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-playwright": "^0.15.3",
    "jest": "^29.6.2",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "svg-sprite-loader": "^6.0.11",
    "svgo-loader": "^4.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6",
    "typesync": "^0.11.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "smooth-scroll": "^16.1.3"
  }
}
